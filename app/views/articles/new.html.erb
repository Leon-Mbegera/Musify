<section class= 'background'>
  <div class='form-div'>
  <h2>Write your article</h2>
  <%= form_with model: @article do |f|%>
    <div>
      <%=f.label :category%><br>
      <%=f.collection_select :category_id, Category.order(:name), :id, :name, { :include_blank => 'pick category' }%>
      <p>Build new category <%= link_to "Build Category", new_category_path%></p>
      <% @article.errors.full_messages_for(:category_id).each do |error_message| %>
        <div><%= error_message %></div>
      <% end %>
    </div>

    <div>
      <%=f.label :title, class: 'label'%>
      <%=f.text_field :title, class: 'field' %>
      <% @article.errors.full_messages_for(:title).each do |error_message| %>
        <div><%= error_message %></div>
      <% end %>  
    </div>

    <div>
      <%=f.label :body%>
      <%=f.text_area :body%>
       <% @article.errors.full_messages_for(:body).each do |error_message| %>
        <div><%= error_message %></div>
      <% end %>
    </div>

    <div>
      <%=f.label :image%>
      <%=f.file_field :image%>
      <% @article.errors.full_messages_for(:image).each do |error_message| %>
        <div><% error_message %></div>
      <% end %>
    </div>

    <div>
      <%=f.submit 'Upload' %>
    </div>

  <%end%>
  </div>
</section>